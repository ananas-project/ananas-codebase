<?xml version='1.0' ?>
<!-- this is a example for snowflake-repo (not bare) -->
<template main="#works" xmlns="uri:xmlns:ananas:dtml">

	<dir id="working_dir">

		<dir name=".xgit">
			<dir name="objects" required="true"></dir>
			<dir name="extends" optional="true"></dir>
			<dir name="branches"></dir>
			<dir name="refs"></dir>
			<file name="config" />
		</dir>

		<dir name=".snowflake" id="works">
			<dir name="shadows" id="shadows_dir"></dir>
			<dir name="local"></dir>
			<file id="ignore_file" name=".xgitignore" />
		</dir>

	</dir>

</template>
